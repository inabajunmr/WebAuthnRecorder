{
  "manifest_version": 3,
  "name": "WebAuthn Logger Extension",
  "version": "1.0",
  "description": "Chrome extension that logs WebAuthn navigator.credentials calls",
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebAuthn Logger"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}